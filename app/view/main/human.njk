{% extends 'common/base.njk' %} {% block body %}
<div id="main">
  <button type="button" class="btn btn-primary mr" data-toggle="modal" data-target="#exampleModal" >新增人员</button>

  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">新增人员</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
              <form>
                  <div class="form-group">
                    <label for="exampleInputEmail1">姓名</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="请输入姓名">
                    <small id="emailHelp" class="form-text text-muted">输入负责人的姓名或者昵称</small>
                  </div>
                  
                </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
</div>

{% endblock %} {% block script %}
<script src="public/main/human.js"></script>

{% endblock %}